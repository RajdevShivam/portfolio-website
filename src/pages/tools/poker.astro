---
import Layout from "@/layouts/Layout.astro";
import Header from "@/components/Header.astro";
import Footer from "@/components/Footer.astro";
---

<Layout title="Texas Hold'em | Order in Chaos">
  <Header />
  <main id="main-content">
    <section class="poker-section">
      <div id="poker-app"></div>
    </section>
  </main>
  <div class="bug-report-bar">
    <a
      href="https://github.com/RajdevShivam/portfolio-website/issues/new?labels=bug&title=[Poker]+Bug+Report"
      target="_blank"
      rel="noopener noreferrer"
    >Found a bug? Report it on GitHub &rarr;</a>
  </div>
  <Footer />
  <div id="rotate-overlay">
    <div class="rotate-message">
      <span class="rotate-icon">&#128241;</span>
      <p>Please rotate your device to landscape</p>
    </div>
  </div>
</Layout>

<link rel="stylesheet" href="/poker/poker.css" />
<script is:inline src="/poker/poker.js"></script>

<style>
  .bug-report-bar {
    text-align: center;
    padding: 0.5rem 1rem;
    font-size: 0.8rem;
    opacity: 0.5;
  }

  .bug-report-bar a {
    color: inherit;
    text-decoration: underline;
    text-underline-offset: 2px;
  }

  .bug-report-bar a:hover {
    opacity: 0.8;
  }

  .poker-section {
    width: 100%;
    max-width: 1100px;
    margin: 0 auto;
    padding: 0.5rem 1rem 1rem;
  }

  #rotate-overlay {
    display: none;
    position: fixed;
    inset: 0;
    z-index: 9999;
    background: var(--color-background);
    align-items: center;
    justify-content: center;
  }

  .rotate-message {
    text-align: center;
    color: var(--color-foreground);
    font-family: system-ui, sans-serif;
  }

  .rotate-icon {
    font-size: 3rem;
    display: block;
    margin-bottom: 1rem;
  }

  .rotate-message p {
    font-size: 1.1rem;
    opacity: 0.6;
  }

  @media (max-width: 768px) and (orientation: portrait) {
    #rotate-overlay {
      display: flex;
    }
  }
</style>
