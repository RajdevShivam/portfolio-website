---
import IconX from "@/assets/icons/IconX.svg";
import IconMoon from "@/assets/icons/IconMoon.svg";
import IconSearch from "@/assets/icons/IconSearch.svg";
import IconArchive from "@/assets/icons/IconArchive.svg";
import IconSunHigh from "@/assets/icons/IconSunHigh.svg";
import IconMenuDeep from "@/assets/icons/IconMenuDeep.svg";
import LinkButton from "./LinkButton.astro";
import { SITE } from "@/config";

const { pathname } = Astro.url;

// Remove trailing slash from current pathname if exists
const currentPath =
  pathname.endsWith("/") && pathname !== "/" ? pathname.slice(0, -1) : pathname;

const isActive = (path: string) => {
  const currentPathArray = currentPath.split("/").filter(p => p.trim());
  const pathArray = path.split("/").filter(p => p.trim());

  return currentPath === path || currentPathArray[0] === pathArray[0];
};
---

<header>
  <a
    id="skip-to-content"
    href="#main-content"
    class="absolute start-16 -top-full z-50 bg-background px-3 py-2 text-accent backdrop-blur-lg transition-all focus:top-4"
  >
    Skip to content
  </a>
  <div
    id="nav-container"
    class="mx-auto flex max-w-app flex-col items-center justify-between sm:flex-row"
  >
    <div
      id="top-nav-wrap"
      class="relative flex w-full items-baseline justify-between bg-background p-4 sm:items-center sm:py-6"
    >
      <a
        href="/"
        class="absolute py-1 text-xl leading-8 font-semibold whitespace-nowrap sm:static sm:my-auto sm:text-2xl sm:leading-none"
      >
        {SITE.title}
      </a>
      <nav
        id="nav-menu"
        class="flex w-full flex-col items-center sm:ms-2 sm:flex-row sm:justify-end sm:space-x-4 sm:py-0"
      >
        <button
          id="menu-btn"
          class="focus-outline self-end p-2 sm:hidden"
          aria-label="Open Menu"
          aria-expanded="false"
          aria-controls="menu-items"
        >
          <IconX id="close-icon" class="hidden" />
          <IconMenuDeep id="menu-icon" />
        </button>
        <ul
          id="menu-items"
          class:list={[
            "mt-4 flex flex-col items-center gap-y-2 sm:mt-0 sm:flex-row sm:gap-x-5 sm:gap-y-0",
            "[&>li>a]:block [&>li>a]:px-4 [&>li>a]:py-2 [&>li>a]:font-medium [&>li>a]:hover:text-accent sm:[&>li>a]:px-2 sm:[&>li>a]:py-1",
            "hidden sm:flex",
          ]}
        >
          <li>
            <a href="/posts" class:list={{ "active-nav": isActive("/posts") }}>
              Posts
            </a>
          </li>
          <li>
            <a href="/tags" class:list={{ "active-nav": isActive("/tags") }}>
              Tags
            </a>
          </li>
          <li>
            <a href="/about" class:list={{ "active-nav": isActive("/about") }}>
              About
            </a>
          </li>
          <li class="nav-dropdown-wrap">
            <button
              class:list={[
                "nav-dropdown-trigger",
                { "active-nav": isActive("/tools") },
              ]}
            >
              Games <span class="nav-dropdown-arrow">&#9662;</span>
            </button>
            <ul class="nav-dropdown-menu">
              <li>
                <a href="/tools/poker">Poker</a>
              </li>
              <li>
                <a href="/tools/blackjack-trainer">Blackjack</a>
              </li>
            </ul>
          </li>
          {
            SITE.showArchives && (
              <li>
                <LinkButton
                  href="/archives"
                  class:list={[
                    "focus-outline flex justify-center p-2 sm:p-1",
                    {
                      "active-nav [&>svg]:stroke-accent": isActive("/archives"),
                    },
                  ]}
                  ariaLabel="archives"
                  title="Archives"
                >
                  <IconArchive class="hidden sm:inline-block" />
                  <span class="sm:sr-only">Archives</span>
                </LinkButton>
              </li>
            )
          }
          <li class="flex items-center justify-center">
            <LinkButton
              href="/search"
              class:list={[
                "focus-outline flex p-2 sm:p-1",
                { "[&>svg]:stroke-accent": isActive("/search") },
              ]}
              ariaLabel="search"
              title="Search"
            >
              <IconSearch />
              <span class="sr-only">Search</span>
            </LinkButton>
          </li>
          {
            SITE.lightAndDarkMode && (
              <li class="flex items-center justify-center">
                <button
                  id="theme-btn"
                  class="focus-outline relative size-10 p-2 sm:size-8 hover:[&>svg]:stroke-accent"
                  title="Toggles light & dark"
                  aria-label="auto"
                  aria-live="polite"
                >
                  <IconMoon class="absolute top-[50%] left-[50%] -translate-[50%] scale-100 rotate-0 transition-all dark:scale-0 dark:-rotate-90" />
                  <IconSunHigh class="absolute top-[50%] left-[50%] -translate-[50%] scale-0 rotate-90 transition-all dark:scale-100 dark:rotate-0" />
                </button>
              </li>
            )
          }
        </ul>
      </nav>
    </div>
  </div>
</header>

<script>
  function toggleNav() {
    const menuBtn = document.querySelector("#menu-btn");
    const menuItems = document.querySelector("#menu-items");
    const menuIcon = document.querySelector("#menu-icon");
    const closeIcon = document.querySelector("#close-icon");

    if (!menuBtn || !menuItems || !menuIcon || !closeIcon) return;

    menuBtn.addEventListener("click", () => {
      const openMenu = menuBtn.getAttribute("aria-expanded") === "true";

      menuBtn.setAttribute("aria-expanded", openMenu ? "false" : "true");
      menuBtn.setAttribute("aria-label", openMenu ? "Open Menu" : "Close Menu");

      menuItems.classList.toggle("hidden");
      menuIcon.classList.toggle("hidden");
      closeIcon.classList.toggle("hidden");
    });
  }

  toggleNav();

  // Runs on view transitions navigation
  document.addEventListener("astro:after-swap", toggleNav);

  // Games dropdown toggle (mobile + click support)
  function initDropdowns() {
    document.querySelectorAll(".nav-dropdown-trigger").forEach(btn => {
      btn.addEventListener("click", e => {
        e.stopPropagation();
        const wrap = btn.closest(".nav-dropdown-wrap");
        if (!wrap) return;
        const isOpen = wrap.classList.contains("open");
        // Close all other dropdowns
        document.querySelectorAll(".nav-dropdown-wrap.open").forEach(w => w.classList.remove("open"));
        if (!isOpen) wrap.classList.add("open");
      });
    });
    document.addEventListener("click", () => {
      document.querySelectorAll(".nav-dropdown-wrap.open").forEach(w => w.classList.remove("open"));
    });
  }
  initDropdowns();
  document.addEventListener("astro:after-swap", initDropdowns);
</script>

<style>
  .nav-dropdown-wrap {
    position: relative;
  }

  .nav-dropdown-trigger {
    display: block;
    background: none;
    border: none;
    cursor: pointer;
    font: inherit;
    color: inherit;
    padding: 0.5rem 1rem;
    font-weight: 500;
  }

  .nav-dropdown-trigger:hover {
    color: var(--color-accent);
  }

  .nav-dropdown-arrow {
    font-size: 0.6em;
    margin-left: 0.15rem;
    vertical-align: middle;
  }

  .nav-dropdown-menu {
    display: none;
    position: absolute;
    top: 100%;
    left: 50%;
    transform: translateX(-50%);
    min-width: 130px;
    background: var(--color-background);
    border: 1px solid var(--color-border);
    border-radius: 0.5rem;
    padding: 0.25rem 0;
    box-shadow: 0 4px 16px rgba(0, 0, 0, 0.12);
    z-index: 50;
    list-style: none;
  }

  .nav-dropdown-menu li a {
    display: block;
    padding: 0.4rem 1rem;
    font-size: 0.9rem;
    font-weight: 500;
    white-space: nowrap;
    color: inherit;
    text-decoration: none;
  }

  .nav-dropdown-menu li a:hover {
    color: var(--color-accent);
    background: var(--color-background-secondary, rgba(0, 0, 0, 0.04));
  }

  /* Show dropdown on hover (desktop) */
  @media (min-width: 640px) {
    .nav-dropdown-wrap:hover .nav-dropdown-menu {
      display: block;
    }
  }

  /* Show on click via .open class (all devices) */
  .nav-dropdown-wrap.open .nav-dropdown-menu {
    display: block;
  }

  /* Mobile: full width dropdown */
  @media (max-width: 639px) {
    .nav-dropdown-menu {
      position: static;
      transform: none;
      box-shadow: none;
      border: none;
      background: transparent;
      padding: 0;
      min-width: auto;
    }

    .nav-dropdown-trigger {
      padding: 0.5rem 1rem;
    }

    .nav-dropdown-menu li a {
      padding: 0.35rem 1.5rem;
      font-size: 0.85rem;
    }
  }
</style>
