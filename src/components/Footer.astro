---
import Socials from "./Socials.astro";

const currentYear = new Date().getFullYear();

export interface Props {
  noMarginTop?: boolean;
}

const { noMarginTop = false } = Astro.props;
---

<footer class:list={["w-full py-8", { "mt-auto": !noMarginTop }]}>
  <div
    class="flex flex-col items-center justify-between gap-y-2 text-sm opacity-60 sm:flex-row sm:gap-y-0"
  >
    <div class="flex flex-col items-center gap-x-3 whitespace-nowrap sm:flex-row">
      <span>&#169; {currentYear} Shivam Rajdev</span>
      <a
        href="https://github.com/RajdevShivam/portfolio-website/issues/new"
        target="_blank"
        rel="noopener noreferrer"
        class="hover:opacity-100 underline underline-offset-2"
      >Report a bug</a>
    </div>
    <Socials />
  </div>
</footer>
